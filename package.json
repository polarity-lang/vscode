{
  "name": "polarity",
  "displayName": "Polarity-Lang Extension",
  "description": "Language services for polarity-lang.",
  "publisher": "polarity-lang",
  "contributors": [
    "Tim Süberkrüb",
    "David Binder"
  ],
  "version": "0.0.6",
  "pricing": "Free",
  "license": "MIT",
  "icon": "logo_transparent_256.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/polarity-lang/vscode.git"
  },
  "bugs": {
    "url": "https://github.com/polarity-lang/vscode/issues"
  },
  "homepage": "https://github.com/polarity-lang/vscode/blob/main/README.md",
  "engines": {
    "vscode": "^1.69.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:polarity"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "polarity",
        "aliases": [
          "pol"
        ],
        "extensions": [
          ".pol"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "polarity",
        "scopeName": "source.pol",
        "path": "./syntaxes/pol.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "pol",
      "properties": {
        "pol.executable": {
          "type": "string",
          "default": "pol",
          "description": "Path to the pol executable"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "format": "prettier --write '**/*.{js,json,ts,tsx,yml,yaml}'"
  },
  "dependencies": {
    "vsce": "^2.15.0",
    "vscode-languageclient": "^5.2.1"
  },
  "devDependencies": {
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.60.0",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "@vscode/test-electron": "^1.6.2",
    "eslint": "^7.32.0",
    "glob": "^7.1.7",
    "mocha": "^9.1.1",
    "prettier": "^2.6.2",
    "typescript": "^4.4.3"
  }
}